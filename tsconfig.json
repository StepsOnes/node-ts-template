{
  "compilerOptions": {
    "target": "ES2018",
    "lib": [
      "ES6",
      "dom"
    ],
    "module": "NodeNext",
    "rootDir": "./src",
    "allowJs": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"],
  }
}